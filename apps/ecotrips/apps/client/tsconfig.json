{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ecotrips/ui": [
        "../../packages/ui/src"
      ],
      "@ecotrips/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@ecotrips/api": [
        "../../packages/api/src"
      ],
      "@ecotrips/api/*": [
        "../../packages/api/src/*"
      ],
      "@ecotrips/types": [
        "../../packages/types/src"
      ],
      "@ecotrips/types/*": [
        "../../packages/types/src/*"
      ],
      "@ecotrips/i18n": [
        "../../packages/i18n/src"
      ],
      "@ecotrips/i18n/*": [
        "../../packages/i18n/src/*"
      ],
      "@ecotrips/config": [
        "../../packages/config/*"
      ],
      "@ecotrips/config/*": [
        "../../packages/config/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
