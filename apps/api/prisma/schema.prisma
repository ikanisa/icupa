generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  listings  Listing[]
  files     FileObject[]
  aiAgents  AiAgent[]
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  displayName  String
  passwordHash String
  tenantId     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  tenant       Tenant?   @relation(fields: [tenantId], references: [id])
  orders       Order[]
  bookings     Booking[]
  notifications Notification[]
  sessions     AuthSession[]
}

model Listing {
  id          String        @id @default(cuid())
  tenantId    String
  title       String
  description String
  priceCents  Int
  currency    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  tenant      Tenant        @relation(fields: [tenantId], references: [id])
  inventory   InventoryItem[]
  bookings    Booking[]
}

model InventoryItem {
  id        String   @id @default(cuid())
  listingId String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listing   Listing  @relation(fields: [listingId], references: [id])
}

model Order {
  id         String   @id @default(cuid())
  userId     String
  tenantId   String
  totalCents Int
  currency   String
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  payments   Payment[]
}

model Booking {
  id        String   @id @default(cuid())
  listingId String
  userId    String
  startDate DateTime
  endDate   DateTime
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listing   Listing  @relation(fields: [listingId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Payment {
  id         String   @id @default(cuid())
  orderId    String
  provider   String
  reference  String
  amountCents Int
  currency   String
  status     String
  createdAt  DateTime @default(now())
  order      Order    @relation(fields: [orderId], references: [id])
}

model SearchDocument {
  id        String   @id @default(cuid())
  index     String
  payload   Json
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  tenantId  String
  sender    String
  recipient String
  body      String
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  channel   String
  payload   Json
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model FileObject {
  id        String   @id @default(cuid())
  tenantId  String
  filename  String
  mimeType  String
  sizeBytes Int
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model AiAgent {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  description String
  model     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model AuthSession {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
