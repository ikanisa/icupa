{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", ".nvmrc"],
  "pipeline": {
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["lint", "^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint", "typecheck", "^test"],
      "outputs": ["coverage/**", "test-results/**"],
      "cache": true
    },
    "build": {
      "dependsOn": ["lint", "typecheck", "test", "^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "dev": {
      "cache": false
    }
  }
}
