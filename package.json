{
  "name": "@icupa/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18.2",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "agents-service"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "dev:client": "pnpm --filter @icupa/client dev",
    "dev:admin": "pnpm --filter @icupa/admin dev",
    "dev:supplier": "pnpm --filter @ecotrips/supplier dev",
    "build:all": "turbo run build --cache-dir .turbo",
    "build:surfaces": "turbo run build --cache-dir .turbo --filter=@icupa/client --filter=@icupa/vendor --filter=@icupa/admin --filter=@icupa/agents-service --filter=icupa-monorepo",
    "build:client": "pnpm --filter @icupa/client build",
    "build:admin": "pnpm --filter @icupa/admin build",
    "dev:agents": "npm --prefix agents-service run dev",
    "dev:voice-agent": "pnpm --filter @icupa/voice-agent dev",
    "prebuild": "node scripts/ci/check-supabase-env.mjs",
    "pretest": "node scripts/ci/reset-supabase-test-db.mjs",
    "build": "tsc -b && vite build",
    "build:dev": "vite build --mode development",
    "lint": "pnpm lint:repo",
    "lint:repo": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:all": "turbo run lint --cache-dir .turbo",
    "typecheck": "tsc -b --pretty false",
    "typecheck:all": "turbo run typecheck --cache-dir .turbo",
    "preview": "vite preview --port 5000",
    "dev:ocr:converter": "node apps/ocr-converter/server.mjs",
    "dev:all": "bash scripts/dev/dev-all.sh",
    "smoke:ingestion": "node scripts/smoke/ingestion-smoke.mjs",
    "api:migrate": "node scripts/migrate.mjs",
    "api:seed": "node scripts/seed.mjs",
    "api:smoke": "node scripts/smoke.mjs",
    "release:canary-toggle": "node scripts/release/canary-toggle.mjs",
    "release:checklist": "node scripts/release/checklist.mjs",
    "supabase:start": "npx --yes supabase start",
    "supabase:stop": "npx --yes supabase stop",
    "supabase:status": "npx --yes supabase status",
    "supabase:migrate": "npx --yes supabase migration up",
    "supabase:reset": "npx --yes supabase db reset",
    "supabase:test": "npx --yes supabase db test",
    "test": "vitest run",
    "test:all": "turbo run test --cache-dir .turbo",
    "test:mcp": "vitest run tests/mcp",
    "test:accessibility": "vitest run tests/accessibility",
    "security:lint-mcp": "node scripts/security/lint-mcp-tools.mjs",
    "pretest:e2e": "node scripts/ci/reset-supabase-test-db.mjs",
    "test:e2e": "playwright test --config tests/playwright/playwright.config.ts",
    "test:perf": "npx --yes @lhci/cli@0.15.1 autorun",
    "analyze:pwa": "npx --yes lighthouse http://localhost:5000 --only-categories=pwa --preset=desktop || true",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run check:budgets",
    "verify:full": "npm run verify && npm run test:e2e && npm run supabase:test",
    "check:budgets": "pnpm build && node scripts/ci/check-bundle-budget.mjs",
    "storybook:ui": "pnpm --filter @icupa/ui storybook",
    "presupabase:test": "node scripts/ci/reset-supabase-test-db.mjs"
  },
  "packageManager": "pnpm@10.0.0",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@icupa/config": "workspace:*",
    "@netlify/functions": "^2.8.2",
    "@netlify/plugin-lighthouse": "^6.0.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.16.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "vite-plugin-compression2": "^0.10.1",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --max-warnings=0 --no-warn-ignored",
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
