{
  "name": "@icupa/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18.2",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "pnpm run --parallel --filter './apps/*' dev",
    "dev:client": "pnpm --filter @icupa/client dev",
    "dev:admin": "pnpm --filter @icupa/admin dev",
    "build": "pnpm run build:shared && pnpm run build:apps",
    "build:apps": "pnpm run --parallel --filter './apps/*' build",
    "build:shared": "pnpm --filter './packages/*' build",
    "build:client": "pnpm run build:shared && pnpm --filter @icupa/client build",
    "build:admin": "pnpm run build:shared && pnpm --filter @icupa/admin build",
    "preview": "pnpm run --parallel --filter './apps/*' preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "clean": "pnpm run --parallel --filter './apps/*' --filter './packages/*' clean && rm -rf node_modules",
    "clean:cache": "rm -rf .turbo .netlify .parcel-cache",
    "install:clean": "pnpm clean && pnpm install",
    "netlify:build": "pnpm install && pnpm build",
    "netlify:client": "pnpm install && pnpm build:client",
    "netlify:admin": "pnpm install && pnpm build:admin",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:migrate": "supabase db push",
    "supabase:types": "supabase gen types typescript --schema public > packages/db/src/types/database.types.ts",
    "supabase:functions:deploy": "supabase functions deploy",
    "supabase:functions:serve": "supabase functions serve",
    "check:deps": "pnpm outdated -r",
    "check:security": "pnpm audit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@icupa/config": "workspace:*",
    "@netlify/functions": "^2.8.2",
    "@netlify/plugin-lighthouse": "^6.0.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.16.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "vite-plugin-compression2": "^0.10.1",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
